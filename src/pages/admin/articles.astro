---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import ArticleEditor from '../../components/ArticleEditor';
---

<BaseLayout title="Manage Articles - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '1200px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Manage Articles
      </h1>
      
      <ArticleEditor client:load />
    </section>
  </main>
</BaseLayout>


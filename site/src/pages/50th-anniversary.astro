---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation';
---

<BaseLayout title="50th Anniversary - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        50th Anniversary
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Celebrating 50 years of bringing beautiful music to our community!
        </p>
        
        <h2 style={{
          color: '#d4af37',
          'margin-top': '3rem',
          'margin-bottom': '1rem',
          'font-family': 'Georgia, serif',
        }}>
          A Milestone Celebration
        </h2>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          The Germantown Symphony Orchestra is proud to celebrate 50 years of musical excellence and community engagement.
        </p>
        
        <h2 style={{
          color: '#d4af37',
          'margin-top': '3rem',
          'margin-bottom': '1rem',
          'font-family': 'Georgia, serif',
        }}>
          Special Events
        </h2>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Join us for special anniversary concerts and events throughout the year as we celebrate this milestone.
        </p>
      </div>
    </section>
  </main>
</BaseLayout>


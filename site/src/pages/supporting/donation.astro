---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
---

<BaseLayout title="Donation - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Donation
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Your generous donation helps us continue bringing beautiful music to our community.
        </p>
        
        <div style={{
          padding: '2rem',
          background: 'rgba(22, 33, 62, 0.6)',
          'border-radius': '8px',
          'border': '1px solid rgba(212, 175, 55, 0.3)',
          'margin-top': '2rem',
        }}>
          <h2 style={{
            color: '#d4af37',
            'margin-bottom': '1rem',
            'font-family': 'Georgia, serif',
          }}>
            Ways to Give
          </h2>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '1rem' }}>
            You can make a donation by:
          </p>
          <ul style={{ color: '#b0b0b0', 'margin-left': '2rem', 'margin-bottom': '1rem' }}>
            <li>Online donation (coming soon)</li>
            <li>Mail a check to our address</li>
            <li>Contact us for other giving options</li>
          </ul>
          <p style={{ color: '#b0b0b0' }}>
            For more information, please contact us at info@germantownsymphony.org
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>


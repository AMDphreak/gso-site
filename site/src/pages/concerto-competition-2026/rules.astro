---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
---

<BaseLayout title="Concerto Competition 2026 - Rules - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Concerto Competition 2026 - Rules
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <h2 style={{
          color: '#d4af37',
          'margin-top': '2rem',
          'margin-bottom': '1rem',
          'font-family': 'Georgia, serif',
        }}>
          Eligibility
        </h2>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          The competition is open to musicians of all ages who meet the eligibility requirements.
        </p>
        
        <h2 style={{
          color: '#d4af37',
          'margin-top': '2rem',
          'margin-bottom': '1rem',
          'font-family': 'Georgia, serif',
        }}>
          Repertoire Requirements
        </h2>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Competitors must prepare a complete concerto movement or work suitable for performance with orchestra.
        </p>
        
        <h2 style={{
          color: '#d4af37',
          'margin-top': '2rem',
          'margin-bottom': '1rem',
          'font-family': 'Georgia, serif',
        }}>
          Application Deadline
        </h2>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Applications must be submitted by the specified deadline. Please refer to the application page for details.
        </p>
      </div>
    </section>
  </main>
</BaseLayout>


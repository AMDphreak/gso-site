---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
---

<BaseLayout title="Concerto Competition 2026 - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Concerto Competition 2026
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          The Germantown Symphony Orchestra is pleased to announce our annual Concerto Competition for 2026.
        </p>
        
        <div style={{
          display: 'grid',
          gap: '2rem',
          'grid-template-columns': 'repeat(auto-fit, minmax(300px, 1fr))',
          'margin-top': '3rem',
        }}>
          <a href="/concerto-competition-2026/rules" style={{
            padding: '2rem',
            background: 'rgba(22, 33, 62, 0.6)',
            'border-radius': '8px',
            'border': '1px solid rgba(212, 175, 55, 0.3)',
            transition: 'transform 0.2s, border-color 0.2s',
          }}>
            <h2 style={{ color: '#d4af37', 'margin-bottom': '1rem', 'font-family': 'Georgia, serif' }}>
              Rules
            </h2>
            <p style={{ color: '#b0b0b0' }}>
              Review the competition rules and requirements
            </p>
          </a>
          
          <a href="/concerto-competition-2026/application" style={{
            padding: '2rem',
            background: 'rgba(22, 33, 62, 0.6)',
            'border-radius': '8px',
            'border': '1px solid rgba(212, 175, 55, 0.3)',
            transition: 'transform 0.2s, border-color 0.2s',
          }}>
            <h2 style={{ color: '#d4af37', 'margin-bottom': '1rem', 'font-family': 'Georgia, serif' }}>
              Application
            </h2>
            <p style={{ color: '#b0b0b0' }}>
              Apply for the 2026 Concerto Competition
            </p>
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>


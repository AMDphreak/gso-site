---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import LoginForm from '../../components/LoginForm';
---

<BaseLayout title="Admin Login - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '800px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '2.5rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Admin Login
      </h1>
      
      <div style={{
        display: 'grid',
        gap: '2rem',
        'grid-template-columns': 'repeat(auto-fit, minmax(300px, 1fr))',
        'margin-top': '2rem',
      }}>
        <div>
          <h2 style={{ color: '#d4af37', 'margin-bottom': '1rem', 'font-family': 'Georgia, serif' }}>
            Editor Login
          </h2>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '1.5rem' }}>
            For content editors who contribute articles
          </p>
          <LoginForm type="editor" client:load />
        </div>
        
        <div>
          <h2 style={{ color: '#d4af37', 'margin-bottom': '1rem', 'font-family': 'Georgia, serif' }}>
            Board Member Login
          </h2>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '1.5rem' }}>
            For board members with @germantownsymphony.org email
          </p>
          <LoginForm type="board" client:load />
        </div>
      </div>
    </section>
  </main>
</BaseLayout>


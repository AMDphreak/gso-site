---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation';
---

<BaseLayout title="Vernon to Retire - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Vernon to Retire
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          After many years of dedicated service, our Music Director Vernon will be retiring.
        </p>
        
        <p style={{ 'margin-bottom': '1.5rem' }}>
          We extend our deepest gratitude for the incredible contributions and leadership provided throughout the years.
        </p>
      </div>
    </section>
  </main>
</BaseLayout>


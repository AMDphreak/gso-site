---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation';
---

<BaseLayout title="Board Meeting - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Board Meeting
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Information about board meetings, schedules, and minutes.
        </p>
        
        <div style={{
          padding: '2rem',
          background: 'rgba(22, 33, 62, 0.6)',
          'border-radius': '8px',
          'border': '1px solid rgba(212, 175, 55, 0.3)',
          'margin-top': '2rem',
        }}>
          <h2 style={{
            color: '#d4af37',
            'margin-bottom': '1rem',
            'font-family': 'Georgia, serif',
          }}>
            Meeting Schedule
          </h2>
          <p style={{ color: '#b0b0b0' }}>
            Board meetings are typically held monthly. For specific dates and times, please contact the board secretary.
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>


---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
---

<BaseLayout title="Contact - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '800px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Contact Us
      </h1>
      
      <div style={{
        padding: '2rem',
        background: 'rgba(22, 33, 62, 0.6)',
        'border-radius': '8px',
        'border': '1px solid rgba(212, 175, 55, 0.3)',
      }}>
        <h2 style={{
          color: '#d4af37',
          'margin-bottom': '1rem',
          'font-family': 'Georgia, serif',
        }}>
          Get in Touch
        </h2>
        <p style={{ color: '#b0b0b0', 'margin-bottom': '1.5rem' }}>
          For general inquiries, please contact us at:
        </p>
        <p style={{ color: '#f5f5f5', 'font-size': '1.1rem' }}>
          Email: info@germantownsymphony.org
        </p>
      </div>
    </section>
  </main>
</BaseLayout>


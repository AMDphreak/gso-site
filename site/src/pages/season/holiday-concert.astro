---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
---

<BaseLayout title="Dec 13 - Germantown Holiday Concert - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '900px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        Dec 13 - Germantown Holiday Concert
      </h1>
      
      <div style={{
        'line-height': '1.8',
        color: '#f5f5f5',
        'font-size': '1.1rem',
      }}>
        <p style={{ 'margin-bottom': '1.5rem' }}>
          Celebrate the holiday season with the Germantown Symphony Orchestra's annual holiday concert.
        </p>
        
        <div style={{
          padding: '2rem',
          background: 'rgba(22, 33, 62, 0.6)',
          'border-radius': '8px',
          'border': '1px solid rgba(212, 175, 55, 0.3)',
          'margin-top': '2rem',
        }}>
          <h2 style={{
            color: '#d4af37',
            'margin-bottom': '1rem',
            'font-family': 'Georgia, serif',
          }}>
            Concert Details
          </h2>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '0.5rem' }}>
            <strong style={{ color: '#d4af37' }}>Date:</strong> December 13, 2025
          </p>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '0.5rem' }}>
            <strong style={{ color: '#d4af37' }}>Time:</strong> TBA
          </p>
          <p style={{ color: '#b0b0b0' }}>
            <strong style={{ color: '#d4af37' }}>Location:</strong> TBA
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>


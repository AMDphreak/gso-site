---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
---

<BaseLayout title="2025-2026 Season - Germantown Symphony Orchestra">
  <Navigation client:load />
  
  <main style={{
    'min-height': '80vh',
    padding: '2rem',
  }}>
    <section style={{
      'max-width': '1200px',
      margin: '0 auto',
      padding: '4rem 2rem',
    }}>
      <h1 style={{
        'font-size': '3rem',
        'margin-bottom': '2rem',
        color: '#d4af37',
        'font-family': 'Georgia, serif',
        'text-align': 'center',
      }}>
        2025-2026 Season
      </h1>
      
      <div style={{
        display: 'grid',
        gap: '2rem',
        'grid-template-columns': 'repeat(auto-fill, minmax(350px, 1fr))',
        'margin-top': '3rem',
      }}>
        <a href="/season/young-artist" style={{
          padding: '2rem',
          background: 'rgba(22, 33, 62, 0.6)',
          'border-radius': '8px',
          'border': '1px solid rgba(212, 175, 55, 0.3)',
          transition: 'transform 0.2s, border-color 0.2s',
          display: 'block',
        }}>
          <h2 style={{ color: '#d4af37', 'margin-bottom': '1rem', 'font-family': 'Georgia, serif' }}>
            Nov 8 - Young Artist
          </h2>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '1rem' }}>
            Date: November 8, 2025
          </p>
          <p style={{ color: '#b0b0b0' }}>
            Join us for an exciting concert featuring our young artist competition winner.
          </p>
        </a>
        
        <a href="/season/holiday-concert" style={{
          padding: '2rem',
          background: 'rgba(22, 33, 62, 0.6)',
          'border-radius': '8px',
          'border': '1px solid rgba(212, 175, 55, 0.3)',
          transition: 'transform 0.2s, border-color 0.2s',
          display: 'block',
        }}>
          <h2 style={{ color: '#d4af37', 'margin-bottom': '1rem', 'font-family': 'Georgia, serif' }}>
            Dec 13 - Germantown Holiday Concert
          </h2>
          <p style={{ color: '#b0b0b0', 'margin-bottom': '1rem' }}>
            Date: December 13, 2025
          </p>
          <p style={{ color: '#b0b0b0' }}>
            Celebrate the holiday season with our annual holiday concert.
          </p>
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

